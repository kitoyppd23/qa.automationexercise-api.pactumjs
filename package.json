{
  "name": "qa.automationexercise-api.pactumjs",
  "version": "1.0.0",
  "description": "Automação de testes de API para ServeRest usando PactumJS com Page Objects",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:verbose": "jest --verbose",
    "test:login": "jest src/tests/suites/login/login.test.js",
    "test:user": "jest src/tests/suites/userListing/userListing.test.js",
    "test:user-creation": "jest src/tests/suites/userCreation/userCreation.test.js",
    "test:user-search": "jest src/tests/suites/userSearchById/userSearch.test.js",
    "test:user-delete": "jest src/tests/suites/userSearchById/userDelete.test.js",
    "test:user-search:logs": "jest src/tests/suites/userSearchById/userSearch.test.js --verbose > logs/user-search.log 2>&1",
    "test:parallel": "jest --maxWorkers=4",
    "test:coverage": "jest --coverage",
    "report": "jest --reporters=default --reporters=jest-html-reporters --testMatch='**/src/tests/**/*.test.js'",
    "validate": "npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kitoyppd23/qa.automationexercise-api.pactumjs.git"
  },
  "keywords": [
    "api-testing",
    "automation",
    "pactumjs",
    "page-objects",
    "quality-assurance",
    "serverest"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kitoyppd23/qa.automationexercise-api.pactumjs/issues"
  },
  "homepage": "https://github.com/kitoyppd23/qa.automationexercise-api.pactumjs#readme",
  "dependencies": {
    "pactum": "^3.3.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "allure-commandline": "^2.24.1",
    "allure-jest": "^2.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/src/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "verbose": true,
    "silent": false,
    "reporters": [
      "default",
      [
        "jest-html-reporters",
        {
          "publicPath": "./reports",
          "filename": "report.html",
          "expand": true,
          "pageTitle": "ServeRest API Test Report",
          "includeConsoleLog": true,
          "includeFailureMsg": true,
          "includeStackTrace": true
        }
      ]
    ]
  }
}
